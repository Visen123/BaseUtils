<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/head_top_basetool" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/head_img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20px"
            android:paddingTop="20px"
            android:paddingRight="40px"
            android:paddingBottom="20px"
            android:src="@drawable/fanhui" />

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:maxLength="5"
            android:textColor="@color/text_color"
            android:textSize="28px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/head_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_color"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/head_img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:padding="20px"
            android:textColor="@color/text_color"
            android:textSize="28px"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/right_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="10px">

            <ImageView
                android:id="@+id/head_img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15px"
                android:src="@drawable/czg_gwc"
                android:visibility="visible" />

            <com.yanyiyun.view.CircleTextView
                android:id="@+id/top_right_text_ctv"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="right|top"
                android:text="20"
                android:textColor="@android:color/white"
                android:textSize="20px" />
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/line_tv"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />
</LinearLayout>