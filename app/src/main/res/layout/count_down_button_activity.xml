<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/head" />

    <com.yanyiyun.baseutils.library.view.CountDownButton
        android:id="@+id/cd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textSize="@dimen/middle_small"
        cus:cdFinishText="获取验证码"
        cus:countDown="60000"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        cus:countDownFormat="%ds"
        cus:countDownInterval="1000" />
</LinearLayout>