<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textColor="#999999"
        android:textSize="28px" />

    <EditText
        android:id="@+id/mobile_et"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="20px"
        android:inputType="phone"
        android:textColor="@color/text_color_secend"
        android:textSize="26px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/code_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text_color_secend"
            android:textSize="26px" />

        <com.yanyiyun.baseutils.library.view.CountDownButton
            android:id="@+id/get_code_cdb"
            android:layout_width="164px"
            android:layout_height="wrap_content"
            android:gravity="center"
            cus:cdFinishText="获取验证码"
            cus:countDown="60000"
            cus:countDownFormat="%ds"
            cus:countDownInterval="1000"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_marginRight="10px"
            android:textColor="@color/text_color_secend"
            android:text="获取验证码"
            android:textSize="26px" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10px"
        android:background="@color/line_color" />

</LinearLayout>